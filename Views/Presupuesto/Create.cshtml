@{
    ViewData["Title"] = "Crear un Presupuesto";
}
@model Presupuesto

<form asp-controller="Presupuesto" asp-action="Create" method="post" enctype="multipart/form-data">
        <section class="d-flex flex-column">
            <section class=" d-flex justify-content-start mb-2">
                <section class="me-3 ">
                    <label for="nombreDestinatario" class="form-label">Destinatario</label>
                    <input type="text" name="nombreDestinatario" id="nombreDestinatario" class="form-control" asp-form="@Model.NombreDestinatario" >
                </section>
            </section>
            <section class="d-flex justify-content-start mb-2 ">
                <button type="button" class="btn btn-secondary me-1"> <a asp-controller="Presupuesto" asp-action="Index">Volver</a></button>
                <button type="submit" class="btn btn-primary ms-1">CREAR</button>
            </section>
        </section>
</form>





