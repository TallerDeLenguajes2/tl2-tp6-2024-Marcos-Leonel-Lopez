@model PresupuestoViewModel

@{
    ViewData["Title"] = "Crear un Presupuesto";
}

<form asp-controller="Presupuesto" asp-action="Create" method="post" enctype="multipart/form-data">
    <section class="d-flex flex-column">
        <section class="d-flex justify-content-start mb-2">
            <section class="me-3">
                <label for="ClienteSeleccionado" class="form-label">Destinatario</label>

                <!-- Vinculamos el ID del cliente a ClienteSeleccionado en el ViewModel -->
                <select asp-for="Presupuesto.Destinatario.IdCliente"
                    asp-items="@(new SelectList(Model.Clientes, "IdCliente", "NombreCliente"))" class="form-control">
                    <option value="">Seleccione un Cliente</option>
                </select>

            </section>
        </section>
        <section class="d-flex justify-content-start mb-2">
            <button type="button" class="btn btn-secondary me-1">
                <a asp-controller="Presupuesto" asp-action="Index">Volver</a>
            </button>
            <button type="submit" class="btn btn-primary ms-1">CREAR</button>
        </section>
    </section>
</form>
