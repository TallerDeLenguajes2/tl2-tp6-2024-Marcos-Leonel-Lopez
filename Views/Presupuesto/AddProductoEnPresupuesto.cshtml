@model AgregarProductoViewModel

<section class="container">
    <section class="mt-4 d-flex align-items-center">
        <section class="col-4">
            <h3 class="d-inline">@Model.Presupuesto.Destinatario.IdCliente
                (id#@Model.Presupuesto.Destinatario.IdCliente)</h3>
            <h6 class="d-inline">Presupuesto id# @Model.Presupuesto.IdPresupuesto</h6>
        </section>
        <section class="d-flex  col-8">
            <form asp-action="AddProductoEnPresupuesto" method="post" class="ms-4 d-flex align-items-end">
                <section class="col-8 mx-2">
                    <input type="hidden" name="idPresupuesto" value="@Model.Presupuesto.IdPresupuesto" />
                    <select name="idProducto" class="form-control">
                        <option value="">Seleccione un Producto</option>
                        @foreach (var producto in Model.Productos)
                        {
                            <option value="@producto.IdProducto">
                                @producto.Descripcion - $@producto.Precio
                            </option>
                        }
                    </select>
                </section>
                <section class="col-2 mx-2">
                    <label for="cantidad" class="me-2">Cantidad:</label>
                    <input type="number" id="cantidad" name="cantidad" class="form-control me-2" min="1" required />
                </section>
                <button type="submit" class="btn btn-primary">Agregar Producto</button>
            </form>
        </section>



        <!-- Formulario para agregar producto -->

    </section>

    <!-- Encabezados de columnas -->
    <div class="row bg-dark text-white p-2 rounded mt-4">
        <div class="col-6 fw-bold">Producto</div>
        <div class="col-3 fw-bold">Precio</div>
        <div class="col-3 fw-bold">Cantidad</div>
    </div>

    <!-- Detalle del presupuesto -->
    @if (Model.Presupuesto.Detalle != null && Model.Presupuesto.Detalle.Any())
    {
        @foreach (var detalle in Model.Presupuesto.Detalle)
        {
            <div class="row bg-light p-2 border-bottom">
                <div class="col-6">@detalle.Producto.Descripcion</div>
                <div class="col-3">@detalle.Producto.Precio.ToString("C")</div>
                <div class="col-3">@detalle.Cantidad</div>
            </div>
        }
    }
    else
    {
        <div class="row bg-light p-2 border-bottom">
            <div class="col-12"><em>Sin productos</em></div>
        </div>
    }

    <!-- BotÃ³n de regreso -->
    <a href="@Url.Action("Index", "Presupuesto")" class="btn btn-secondary mt-4">Volver</a>
</section>
